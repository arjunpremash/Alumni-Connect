<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alumni Connect</title>
    <base href="/">
    <link rel="styleSheet" href="style.css">
    <script src="https://kit.fontawesome.com/c4254e24a8.js" crossorigin="anonymous"></script>
</head>
<body>
    
    <nav>
        <div class="nav-left">
            <a href="home.html"><img src="images/logo1.png" class="logo"></a>
            <img src="images/1.png" class="logo1">
        <ul>
    
            <div class="dropdown">
                <button class="dropbtn"> <li>
                    <span class="fa fa-bell bell" aria-hidden="true" style="color: white";></span>
                </li></button>
                <div class="dropdown-content">
                <% ntfcn.forEach(function(ntfcn){ %>
                    <a><%= ntfcn %></a>
                <% }) %>
                </div>
            </div>
            <style>
            .dropbtn {
                
                width: 50px;
                height: 50px;
                border: none;
                cursor: pointer;
                background-color:#1876f2 ;
            }

            .dropdown {
                position: relative;
                display: inline-block;
            }
              
              .dropdown-content {
                display: none;
                position: absolute;
                background-color: #f9f9f9;
                min-width: 160px;
                box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                z-index: 1;
              }
              
              .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
              }
              .dropdown-content a:hover {background-color: #f1f1f1}
              
              .dropdown:hover .dropdown-content {
                display: block;
              }
              
              .dropdown:hover .dropbtn {
                background-color: #1876f2;
              }
              .bell{
                    color: white;
                    font-size: x-large;
                    
                }

            </style>
            <li>
                <i class="fa fa-comments bell" aria-hidden="true"style="color: white;" id="button" ></i>
                


                <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.0/jquery.min.js"></script>
                <script type="text/javascript">
                $(function(){
                $('#button').click(function(){ 
                if(!$('#iframe').length) {
                $('#iframeHolder').html('<iframe id="iframe" src="/message" width="800p" height="800px" border="none" ></iframe>');
                }
                });   
                });
                
                </script>
                <script>
                    // let mywindow;
                    // function openWin() {
                    // myWindow = window.open(<iframe id="iframe" src="/message" width="800p" height="800px" border="none" ></iframe> );
                    // }
                    function refreshPage(){
                        window.location.reload();
                    }
                </script>
            </li>
        </ul>
        </div>
        
        <div class="nav-right">
            <div class="search-box">
                <img src="images/search.png">
                <form action="/search" method="post">
                    <input type="text" id="search" name="search" placeholder="Search" required>
                </form>
                
            </div>
            <div class="nav-user-icon online" onclick="settingsMenuToggle()">
                <img src="images/profile-pic.png">
            </div>
        </div>

        <!-- ------dropdown-settings-menu--------- -->

        <div class="settings-menu">
            <div id="dark-btn">
                <span></span>
            </div>
            <div class="settings-menu-inner">
                <div class="user-profile">
                    <img src="images/profile-pic.png">
                    <div>
                        <p><%= user.username %></p>
                        <a href="/profile">See your profile</a>
                    </div>
                </div>
                <hr>
                <div class="user-profile">
                    <img src="images/feedback.png">
                    
                    <div>
                        <p>Give Feedback</p>
                        <a href="mailto:alumniconnect@support.in">Help us improve the new deisgn</a>
                    </div>
                </div>
                <hr>
                <div class="settings-links">
                    <img src="images/logout.png" class="settings-icon">
                    <a href="/logout">Logout <img src="images/arrow.png" width="10px"></a>
                </div>
            </div>
        
        </div>
    </nav>
    <div class="container">
        <div class="left-sidebar">
            <div class="imp-links">
                <a href="#"><img src="images/friends.png"> Friends</a>
                <a href="#"><img src="images/group.png"> Groups</a>
                <div class="dropdown2">
                <!-- <i class="dropbtn2">Job oppurtunities</i> -->
                <!-- <i class="fa-solid fa-briefcase">Job oppurtunities</i> -->
                <a href="#"><img src="images/job.png"> Job oppurtunities</a>
                <div class="dropdown-content2">
                <a href="/jobspot/mech">Mechanical</a>
                <a href="/jobspot/eee">Electrical</a>
                <a href="/jobspot/ec">Electronics</a>
                <a href="/jobspot/it">IT</a>
                <a href="/jobspot/cs">CS</a>
                </div>
            </div>
        </div>
        
    </div>
<!----------------- middle content--------- -->
    <div class="main-content">
        <div class="write-post-container">
            <div class="user-profile">
                <img src="images/profile-pic.png">
                <div>
                    <p><%= user.fullname %></p>
                    <small>Public <i class="fas fa-caret-down"></i></small>
                </div>
            </div>

            <div class="post-input-container">
                <textarea rows="3" name="content" form="contentSubmission" placeholder="What's on your mind, <%= user.fullname %>?"></textarea>
                
                <div class="add-post-links">
                    <input type="file" form="contentSubmission" name="image">
                    <form action="/add" method="POST" id="contentSubmission" enctype="multipart/form-data">
                        <button type="submit" class="create-post-btn">Create Post</button>
                    </form>
                </div>
            </div>

        </div>

        <% homeposts.forEach(function(post) { %>
            <div class="post-container">
                <div class="post-row">
                    <div class="user-profile">
                        <img src="images/profile-pic.png">
                        <div>
                            <p><%= post.username %></p>
                            <span><%= post.createdAt %></span>
                        </div>
                    </div>
                    <a href="#"><i class="fas fa-ellipsis-v"></i></a>
                </div>
                <p class="post-text"><%= post.content %></p>
                <% if(post.image != null) { %>
                    <img src="<%= '../' + post.image %>" class="post-img">

                <% } else { %>
                    
                <% } %>
                <div class="post-row">
                    <div class="activity-icons">

                    <div><form action = "/post/like" method="POST">
                            <button type="submit" name="likebtn" value="<%=post._id%>"><i onClick="toggleLike(this)" class="fa fa-thumbs-o-up fa-2x" aria-hidden="true"></i><%=post.likes%></button>
                        </form></div>
                    </div>
                    <div class="post-profile-icon">
                        <img src="images/profile-pic.png"> <i class="fas fa-caret-down"></i>
                    </div>
                </div>
    
            </div>
            <% }) %>

        
        <button type="button" class="load-more-btn">Load More</button>

       </div>
<!-- ----------right sidebar----------- -->
       <div class="right-sidebar">

        <div class="sidebar-title">
            
            
        <div id="iframeHolder"></div>

       </div>
    </div>
    <div class="footer">
        <p></p>
    </div>

    <script src="script.js"></script>
</body>
</html>



